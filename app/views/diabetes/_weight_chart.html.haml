- @weight_values = []
- @client_weight.each do |c| 
  - @weight_values << "{/date/: '#{c.activity_date.strftime("%Y-%m-%d")}', /column-2/: '#{c.weight}',  }"
  -if !@client_weight.last
    - @weight_values << ","

- @weight_values = @weight_values.to_s.gsub('"', '')
- @weight_values = @weight_values.to_s.gsub('/', '"')
