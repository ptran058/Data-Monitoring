.recap-box
  .panel.panel-default
    .panel-body
      .row
        .col-md-12
          .title
            Hba1c
          %hr
      .row
        .col-md-12
          .row
            .col-md-4
              .pastvalue 
                - if @hba1cs.first.present? 
                  = @hba1cs.first.mmol 
                - else 
                  N/A
            .col-md-5
              .newvalue 
                - if @hba1cs.last.present? 
                  = @hba1cs.last.mmol 
                - else 
                  N/A
            .col-md-3     
              .unit
                MMO/L
        - if @client_hba1c_target.present?
          .col-md-12
            %hr
            .col-md-6
              Streefwaarde
            .col-md-4
              .target 
                = @client_hba1c_target.mmol
      .row
        .col-md-12
          .lastdate
            -  if @hba1cs.last.present?
              = @hba1cs.last.activity_date.strftime("Laatst gemeten op: %d-%m-%Y")
            - else
              Laatste meetmoment is onbekend