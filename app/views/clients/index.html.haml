    .panel.panel-default
      .panel-heading
        %h3.panel-title Clienten

      .panel-body
        %table.table.table-striped
          %tr
            %td Voornaam
            %td Achternaam
            %td Geboortedatum
            %td Bloedgroep
            %td Kamer nr.
            %td Instelling
            %td Bekijk
