.modal-dialog{:role => "document"}
  .modal-content
    .modal-header
      %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
        %span{"aria-hidden" => "true"} &times;
      %h4#myModalLabel.modal-title Hba1c Streefwaarde
    .modal-body
      = form_for @hba1c_target do |f|
        = f.hidden_field :client_id, value: params[:id]
        .form-group
          = f.label :mmol, "mmol/l"
          = f.text_field :mmol, class: "form-control"
        .row
          .col-md-12
            = f.submit "Submit", class: "btn btn-primary pull-right"